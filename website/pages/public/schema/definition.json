{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "DiceBear Avatar Style Schema",
  "type": "object",
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "license": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "url": {
              "type": "string"
            },
            "content": {
              "type": "string"
            }
          }
        },
        "creator": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "url": {
              "type": "string"
            }
          }
        },
        "source": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "url": {
              "type": "string"
            }
          }
        }
      }
    },
    "body": {
      "type": "object",
      "properties": {
        "content": {
          "type": "string"
        },
        "dependencies": {
          "type": "object",
          "properties": {
            "components": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "colors": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      },
      "required": ["content"]
    },
    "attributes": {
      "type": "object",
      "description": "Specifies the attributes of the SVG element.",
      "properties": {
        "viewBox": {
          "type": "string"
        }
      },
      "additionalProperties": {
        "type": "string"
      },
      "required": ["viewBox"]
    },
    "components": {
      "type": "object",
      "description": "Specifies the components of the avatar. The PRNG randomly selects a component from each component group.",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "probability": {
            "type": "number",
            "description": "The probability of this component group to be displayed in the avatar. If not set, the component group is always displayed.",
            "minimum": 0,
            "maximum": 100
          },
          "rotation": {
            "type": "number",
            "description": "The rotation of the component in degrees. If not set, the component is always displayed without rotation.",
            "minimum": 0,
            "maximum": 360
          },
          "offset": {
            "type": "object",
            "description": "The offset of the component in the avatar. If not set, the component is always displayed without offset.",
            "properties": {
              "x": {
                "type": "number"
              },
              "y": {
                "type": "number"
              }
            }
          },
          "values": {
            "type": "object",
            "description": "Specifies the component options for this component group.",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "default": {
                  "type": "boolean"
                },
                "content": {
                  "type": "string"
                },
                "dependencies": {
                  "type": "object",
                  "properties": {
                    "components": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "colors": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              },
              "required": ["content"]
            }
          }
        },
        "required": ["values"]
      }
    },
    "colors": {
      "type": "object",
      "description": "Specifies color options for the avatar. The PRNG randomly selects a color from each color option.",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "values": {
            "type": "array",
            "description": "An array of default 6-digit hexadecimal color values for this color option.",
            "items": {
              "type": "string"
            }
          },
          "notEqualTo": {
            "type": "string",
            "description": "If set, the color randomly selected by the PRNG should be different from this color option."
          },
          "contrastTo": {
            "type": "string",
            "description": "If set, a color is selected from the values that have the highest contrast to this color option. If the value is not set, the color is selected randomly by the PRNG."
          }
        },
        "required": ["values"]
      }
    },
    "additionalOptions": {
      "type": "object",
      "description": "Specifies additional options for the avatar style. It can also be used to override the default options.",
      "additionalProperties": {
        "$ref": "https://json-schema.org/draft-07/schema#"
      }
    }
  },
  "required": ["body", "attributes", "components"]
}
